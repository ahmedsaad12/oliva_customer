<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apps.oliva_customer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />


    <application
        android:name="com.apps.oliva_customer.share.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:targetApi="q">
        <service
            android:name=".notifications.FireBaseMessaging"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <activity
            android:name=".uis.activity_previous_order_detials.PreviousOrderDetialsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name=".uis.activity_web_view.AboutUsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_map.MapActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_payment.PaymentActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_cart.CartActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_share.ShareActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_product_detials.ProductDetialsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_my_orders.MyOrderActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">


        </activity>
        <activity
            android:name=".uis.activity_previous_orders.PreviousOrderActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">


        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_category_detials.CategoryDetialsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">


        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_favourite.FavouriteActivity"
            android:exported="true">

        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_order_detials.OrderDetialsActivity"
            android:exported="true"></activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_wallet.WalletActivity"
            android:exported="true">

        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_intro_slider.IntroSliderActivity"
            android:exported="true"></activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_language.LanguageActivity"
            android:exported="false" />
        <activity
            android:name="com.apps.oliva_customer.uis.activity_sign_up.SignUpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".uis.activity_filter.FilterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".uis.activity_search.SearchActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.apps.oliva_customer.uis.activity_verification_code.VerificationCodeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.apps.oliva_customer.uis.activity_login.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">

        </activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_contact_us.ContactUsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity
            android:name="com.apps.oliva_customer.uis.activity_notification.NotificationActivity"
            android:exported="true" />
        <activity
            android:name="com.apps.oliva_customer.uis.activity_home.HomeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

        </activity>


        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_api_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>